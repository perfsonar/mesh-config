#!/bin/sh
# postinst script for perfsonar-meshconfig-agent
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        # Rename configuration files
        if dpkg-maintscript-helper supports mv_conffile; then
            dpkg-maintscript-helper mv_conffile \
                /etc/perfsonar/agentconfiguration.conf \
                /etc/perfsonar/meshconfig-agent.conf \
                3.5.1~3.rc1-2~bpo70+1~ -- "$@"
        fi

        # Data directory
        mkdir -p /var/lib/perfsonar/meshconfig
        chown perfsonar:perfsonar /var/lib/perfsonar/meshconfig

        # Generate configuration file if needed
        if ! [ -e /etc/perfsonar/meshconfig-agent-tasks.conf ]; then
            if [ -e /etc/perfsonar/meshconfig-agent-tasks.conf.dpkg-backup ]; then
                mv /etc/perfsonar/meshconfig-agent-tasks.conf.dpkg-backup \
                   /etc/perfsonar/meshconfig-agent-tasks.conf
            else
                cp /usr/share/doc/perfsonar-meshconfig-agent/examples/meshconfig-agent-tasks.conf \
                   /etc/perfsonar/meshconfig-agent-tasks.conf
            fi
        fi

        # Upgrade from regulartesting
        if [ -e /etc/perfsonar/regulartesting.conf ]; then
            mv /etc/perfsonar/meshconfig-agent-tasks.conf \
               /etc/perfsonar/meshconfig-agent-tasks.conf.default
            mv /etc/perfsonar/regulartesting.conf \
               /etc/perfsonar/meshconfig-agent-tasks.conf
        fi

        # Task configuration file need to be writable by perfsonar user
        chown perfsonar:perfsonar /etc/perfsonar/meshconfig-agent-tasks.conf
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
