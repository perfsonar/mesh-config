[Unit]
Description=perfSONAR MeshConfig Agent Daemon
After=network.target

[Service]
Type=forking
PIDFile=/var/run/perfsonar-meshconfig-agent.pid
ExecStart=/usr/lib/perfsonar/bin/perfsonar-meshconfig-agent --config=/etc/perfsonar/meshconfig-agent.conf --logger=/etc/perfsonar/meshconfig-agent-logger.conf --user=perfsonar --group=perfsonar

[Install]
WantedBy=multi-user.target
