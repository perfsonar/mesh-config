#!/bin/sh
# postrm script for perfsonar-meshconfig-agent
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge)
        # Remove generated config
        rm -f /etc/perfsonar/meshconfig-agent-tasks.conf

        # Remove data directory
        rm -rf /var/lib/perfsonar/meshconfig

        # Remove logs
        rm -f /var/log/perfsonar/meshconfig-agent.log*
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Rename configuration files
        if dpkg-maintscript-helper supports mv_conffile; then
            dpkg-maintscript-helper mv_conffile \
                /etc/perfsonar/agentconfiguration.conf \
                /etc/perfsonar/meshconfig-agent.conf \
                3.5.1~3.rc1-2~bpo70+1~ -- "$@"
        fi

        if dpkg-maintscript-helper supports rm_conffile; then
            dpkg-maintscript-helper rm_conffile \
                /etc/perfsonar/meshconfig-agent-tasks.conf -- "$@"
        fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
